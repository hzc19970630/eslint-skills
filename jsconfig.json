{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "checkJs": true,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "skills/eslint-reviewer/scripts/*"]
    }
  },
  "include": [
    "skills/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
}

